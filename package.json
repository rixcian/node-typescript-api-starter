{
  "name": "node-typescript-api-starter",
  "description": "Starter boilerplate REST API project built by Node & Typescript",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "rixcian <rostislav.kremecek@protonmail.com>",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "link-module-alias && node dist/index.js",
    "migration:up": "mikro-orm migration:up",
    "migration:create": "mikro-orm migration:create",
    "entities:generate": "mikro-orm generate-entities --save --path=./src/db/entities"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^14.11.2",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/uuid": "^8.3.3",
    "link-module-alias": "^1.2.0",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "uuid": "^8.3.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "_moduleAliasIgnoreWarning": true,
  "_moduleAliases": {
    "@db": "dist/db",
    "@utils": "dist/utils",
    "@entities": "dist/db/entities"
  }
}
